{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2022",
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "electron"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "electron/**/*.ts",
    "domain/**/*.ts"
  ],
  "exclude": [
    "./dist/tsconfig.tsc.tsbuildinfo",
    "node_modules"
  ]
}